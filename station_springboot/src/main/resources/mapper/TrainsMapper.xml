<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.station_springboot.mapper.TrainsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.station_springboot.entity.Trains">
        <id column="id" property="id" />
        <result column="departure_station_id" property="departureStationId" />
        <result column="arrival_station_id" property="arrivalStationId" />
        <result column="departure_time" property="departureTime" />
        <result column="arrival_time" property="arrivalTime" />
        <result column="train_number" property="trainNumber" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, departure_station_id, arrival_station_id, departure_time, arrival_time, train_number
    </sql>

</mapper>
